<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NiyHist | Iniciar Sesion</title>
  <link rel="shortcut icon" href="public/img/login.png">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  <style>
    
    @import url("https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap");
    *{
      font-family: "Ubuntu", sans-serif;
    }
    .bg {
      background-image: url(public/img/logo2.png);
      background-position: center center;
      background-size: 570px;
      border-top-left-radius: 5px !important;
      border-bottom-left-radius: 5px !important;

    }

    body {
      background-color: #ceecef;
    }

    .color {
      background-color: #111113;
      border-top-right-radius: 5px !important;
      border-bottom-right-radius: 5px !important;
    }

    .color2 {
      background-color: #fffffd;
    }

    .font_color2 {
      color: #00909E;
    }

    .font_color {
      color: #fffffd;
    }

    .inputPassword1 {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
    }

    .viewPassword1 {
      position: absolute;
      display: flex;
      margin-top: -37px;
      padding-right: 10px;
    }

    .boton {
      background: #00909E;
      border-color: #142850;
      border-radius: 5px;
    }

    .boton:hover {
      background: #DAE1E7;
      border-color: #00909E;
      color: #111113;
      transition: all 0.5s;
    }
  </style>

</head>

<body>
  <div class="container w-75 mt-5 pt-5">
    <div class="row aling-items-stretch">
      <div class="col bg color2 d-none d-lg-block col-md-5 col-lg-5 col-xl-6">
        <!--Imagne de fondo-->
      </div>
      <div class="col color">
        <div class="text-end">
          <img src="/public/img/logo.png" class="pt-2 ps-2" width="48" alt="">
        </div>

        <h2 class="fw-bold text-center py-5 font_color2">Bienvenido</h2>

        <!-- Login -->

        <form action="/signin" method="post">
          <div class="mb-4">
            <label for="email" class="form-label font_color">Correo Electronico:</label>
            <input type="email" class="form-control" name="email" aria-describedby="validationServer03Feedback" placeholder="Ingresa tu correo electronico"
              required="">
            <div id="validationServer03Feedback" class="invalid-feedback">
                Please provide a valid city.
            </div>
          </div>
          <div class="mb-2">
            <label for="password" class="form-label font_color text-start">Contraseña:</label>
            <input type="password" class="form-control" id="password1" name="password"
              placeholder="Ingresa tu Contraseña" required="">
          </div>
          <div class="inputPassword1">
            <a type="button" class="viewPassword1"><i class="bi bi-eye" id="PasView2"></i></a>

          </div>
          <div class="mb-4 d-flex flex-row-reverse ps-5">
            <span class="font_color"><a href="">Recueprar contraseña</a></span>
          </div>

          <div class="d-grid col-6 mx-auto text-center">
            <button type="submit" class="btn btn-primary boton">Iniciar Sesion</button>
          </div>

          <div class="my-4">
            <span class="font_color">Aún no tienes cuenta? <a href="/signup">Registrate</a></span> <br>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <%- include('../partials/messages') %>
</body>

</html>

<script>
  const cambiar = document.querySelector('#PasView2');
  let x = document.getElementById("password1");
  const clickPassword = document.querySelector('.viewPassword1');

  clickPassword.addEventListener('click', () => {
    if (cambiar.classList.contains('bi-eye')) {
      cambiar.classList.replace('bi-eye', 'bi-eye-slash');
      x.type = "text";
    } else {
      x.type = "password";
      cambiar.classList.replace('bi-eye-slash', 'bi-eye');
    }
  })


</script>