<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NiyHist | Registro</title>
  <link rel="shortcut icon" href="public/img/registro.png">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700&display=swap" rel="stylesheet">
  <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  <style> 
  @import url("https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap");
    *{
      font-family: "Ubuntu", sans-serif;
    }

    .bg {
      background-image: url(public/img/logo2.png);
      background-position: center center;
      background-size: 750px;
      border-top-left-radius: 5px !important;
      border-bottom-left-radius: 5px !important;

    }

    body {
      background-color: #ceecef;
    }

    .color {
      background-color: #111113;
      border-top-right-radius: 5px !important;
      border-bottom-right-radius: 5px !important;
    }

    .color2 {
      background-color: #fffffd;
    }

    .font_color2 {
      color: #00909E;
    }

    .font_color {
      color: #fffffd;
    }

    .inputPassword1,
    .inputPassword2 {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
    }

    .viewPassword1,
    .viewPassword2 {
      position: absolute;
      display: flex;
      margin-top: 38px;
      padding-right: 25px;
    }

    .boton {
      background: #00909E;
      border-color: #142850;
      border-radius: 5px;
    }

    .boton:hover {
      background: #DAE1E7;
      border-color: #00909E;
      color: #111113;
      transition: all 0.5s;
    }

    @media (width: 474px) {
      .viewPassword2 {
        margin-top: 61px;
      }
    }
  </style>

</head>

<body>
  <div class="container w-75 mt-4 my-2">
    <div class="row aling-items-stretch">
      <div class="col bg color2 d-none d-lg-block col-md-4 col-lg-4 col-xl-5">
        <!--Imagne de fondo-->
      </div>
      <div class="col color">
        <div class="text-end">
          <img src="public/img/logo.png" width="48" alt="" class="pt-2 ps-2">
        </div>

        <h2 class="fw-bold text-center py-5 font_color2">Registrate</h2>

        <!-- Login -->

        <form action="/signup" method="POST">
          <div class="row">
            <div class="col-sm mb-4">
              <label for="text" class="form-label font_color">Nombre:</label>
              <input type="text" class="form-control" name="first_name_user" placeholder="Ingresa tu Nombre" required>
            </div>
            <div class="col-sm mb-4">
              <label for="text" class="form-label font_color">Apellido:</label>
              <input type="text" class="form-control" name="last_name_user" placeholder="Ingresa tu Apellido" required>
            </div>
          </div>
          <div class="mb-4">
            <label for="username" class="form-label font_color">Usuario:</label>
            <input type="text" class="form-control" name="username" placeholder="Ingresa tu Usuario" required>
          </div>
          <div class="mb-4">
            <label for="email" class="form-label font_color">E-mail:</label>
            <input type="email" class="form-control" name="email" placeholder="Ingresa tu E-mail" required>
          </div>
          <div class="row">
            <div class="col-sm mb-4">
              <label for="password" class="form-label font_color">Contrase単a:</label>
              <input type="password" class="form-control" id="password1" name="password"
                placeholder="Ingresa tu Contrase単a" required>
            </div>
            <div class="inputPassword1">
              <a type="button" class="viewPassword1"><i class="bi bi-eye" id="PasView1"></i></a>
            </div>
            <div class="col-sm mb-4">
              <label for="confirm_password" class="form-label font_color">Confirmar Contrase単a:</label>
              <input type="password" class="form-control" id="password2" name="confirm_password"
                placeholder="Ingresa tu Contrase単a" required>
            </div>
            <div class="inputPassword2">
              <a type="button" class="viewPassword2"><i class="bi bi-eye" id="PasView2"></i></a>
            </div>
          </div>


          <div class="d-grid text-center">
            <button type="submit" class="btn btn-primary boton" style="width: auto;">Registrarse</button>
          </div>

          <div class="my-3">
            <span class="font_color">Ya tienes cuenta? <a href="/signin">Inicia Sesion</a></span> <br>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <%- include('../partials/messages') %>
</body>

</html>

<script>


  const cambiar = document.querySelector('#PasView1');
  const cambiar2 = document.querySelector('#PasView2');
  var x = document.getElementById("password1");
  var y = document.getElementById("password2");

  const clickPassword1 = document.querySelector('.viewPassword1');

  clickPassword1.addEventListener('click', () => {
    if (cambiar.classList.contains('bi-eye')) {
      cambiar.classList.replace('bi-eye', 'bi-eye-slash');
      x.type = "text";
    } else {
      x.type = "password";
      cambiar.classList.replace('bi-eye-slash', 'bi-eye');
    }
  })


  const clickPassword2 = document.querySelector('.viewPassword2');

  clickPassword2.addEventListener('click', () => {
    if (cambiar2.classList.contains('bi-eye')) {
      cambiar2.classList.replace('bi-eye', 'bi-eye-slash');
      y.type = "text";
    } else {
      y.type = "password";
      cambiar2.classList.replace('bi-eye-slash', 'bi-eye');
    }
  })

</script>